.row
  .columns.small-7.small-centered
    .text-center
      %h2 sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email'
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: 'password (min 6 characters)'
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password confirmation'
        .actions
          = f.submit "sign up", class: 'button'
      = render "devise/shared/links"
